@page
@model IndexModel


<div class="row">
    @foreach (var product in Model.Products)
    {
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@product.Category</h6>
                    <p class="card-text">@product.Price PLN</p>
                </div>
            </div>
        </div>
    }
</div>